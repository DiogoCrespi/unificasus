<Window x:Class="UnificaSUS.WPF.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Importação de Dados SIGTAP" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Estilo para botões principais -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para botões secundários -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para GroupBox -->
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Seleção de Arquivo -->
        <GroupBox Header="Arquivo SIGTAP" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="txtCaminhoArquivo" 
                         Grid.Column="0"
                         IsReadOnly="True"
                         Padding="8"
                         VerticalContentAlignment="Center"
                         Background="White"
                         Text="Selecione um arquivo ZIP ou pasta descompactada..."/>

                <Button x:Name="btnSelecionarZip" 
                        Grid.Column="1"
                        Content="ZIP..."
                        Style="{StaticResource SecondaryButton}"
                        Click="BtnSelecionarZip_Click"
                        ToolTip="Selecionar arquivo ZIP"/>

                <Button x:Name="btnSelecionarPasta" 
                        Grid.Column="2"
                        Content="Pasta..."
                        Style="{StaticResource SecondaryButton}"
                        Click="BtnSelecionarPasta_Click"
                        ToolTip="Selecionar pasta descompactada"/>
            </Grid>
        </GroupBox>

        <!-- Opções de Importação -->
        <GroupBox Header="Opções de Importação" Grid.Row="1">
            <StackPanel>
                <CheckBox x:Name="chkImportarTodas" 
                          Content="Importar todas as tabelas"
                          IsChecked="True"
                          Margin="5"/>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Modo:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <RadioButton x:Name="rbModoCompleto" Content="Completo" IsChecked="True" Margin="0,0,15,0"/>
                    <RadioButton x:Name="rbModoIncremental" Content="Incremental" Margin="0,0,15,0"/>
                    <RadioButton x:Name="rbModoApenasNovos" Content="Apenas novos" Margin="0,0,15,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Duplicatas:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <RadioButton x:Name="rbDuplicatasIgnorar" Content="Ignorar" Margin="0,0,15,0"/>
                    <RadioButton x:Name="rbDuplicatasAtualizar" Content="Atualizar" IsChecked="True" Margin="0,0,15,0"/>
                    <RadioButton x:Name="rbDuplicatasErro" Content="Erro" Margin="0,0,15,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Progresso -->
        <GroupBox Header="Progresso" Grid.Row="2">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock x:Name="txtStatusGeral" 
                               Text="Aguardando início..." 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtPercentual" 
                               Text="" 
                               Margin="10,0,0,0"
                               FontWeight="Bold"
                               Foreground="#007ACC"/>
                </StackPanel>

                <ProgressBar x:Name="progressBarGeral" 
                             Height="25"
                             Minimum="0" 
                             Maximum="100" 
                             Value="0"
                             Margin="5"/>

                <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                    <TextBlock Text="Tabela atual: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtTabelaAtual" Text="-"/>
                    <TextBlock Text=" | " Margin="10,0"/>
                    <TextBlock Text="Sucesso: " Foreground="Green" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtContadorSucesso" Text="0" Foreground="Green"/>
                    <TextBlock Text=" | " Margin="10,0"/>
                    <TextBlock Text="Erros: " Foreground="Red" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtContadorErros" Text="0" Foreground="Red"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Logs e Lista de Tabelas -->
        <Grid Grid.Row="3" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista de Tabelas -->
            <GroupBox Header="Tabelas" Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="lstTabelas"
                             Background="White"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <TextBlock Text="{Binding StatusIcon}" 
                                               FontSize="14" 
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding TableName}" 
                                                   FontWeight="SemiBold"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Status}" 
                                                   FontSize="10"
                                                   Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </GroupBox>

            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch"
                          Background="#DDDDDD"/>

            <!-- Logs -->
            <GroupBox Header="Logs" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="txtLogs" 
                             Grid.Row="0"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="11"
                             Padding="5"
                             Background="#F8F8F8"/>

                    <Button x:Name="btnSalvarLogs"
                            Grid.Row="1"
                            Content="Salvar Logs"
                            Style="{StaticResource SecondaryButton}"
                            Click="BtnSalvarLogs_Click"
                            Margin="5,5,5,0"
                            HorizontalAlignment="Right"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Botões de Controle -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="10,10,0,0">
            <Button x:Name="btnIniciar" 
                    Content="Iniciar Importação"
                    Style="{StaticResource PrimaryButton}"
                    Click="BtnIniciar_Click"/>

            <Button x:Name="btnCancelar" 
                    Content="Cancelar"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnCancelar_Click"
                    IsEnabled="False"/>

            <Button x:Name="btnFechar" 
                    Content="Fechar"
                    Style="{StaticResource SecondaryButton}"
                    Click="BtnFechar_Click"/>
        </StackPanel>
    </Grid>
</Window>
